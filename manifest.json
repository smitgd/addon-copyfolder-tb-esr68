 {
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "copyfolder@sample.extensions.thunderbird.net",
      "strict_min_version": "78.0"
    }
  },
  "name": "Copy Folder Modified for TB ESR >= 78",
  "description": "Right-click folder and copy it.",
  "version": "2.2.2",
  "icons": {
    "64": "chrome/skin/images/copyfolder_64.png"
  },
  "experiment_apis": {
    "WindowListener": {
      "schema": "api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "api/WindowListener/implementation.js"
      }
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
